<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_category_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".AddCategorie">

    <!-- Top Bar with Back Icon and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Categorie"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FF6B00"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Spacer -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <!-- Category Name Input -->
    <EditText
        android:id="@+id/editTextCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter category name"
        android:padding="15dp"
        android:background="@drawable/edittext1"
        android:textSize="16sp" />

    <!-- Spacer -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <!-- Image Upload Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="image Categorie"
        android:textColor="#444"
        android:textSize="14sp" />

    <!-- Image Upload Section -->
    <LinearLayout
        android:id="@+id/imageUploadSection"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/categoryImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pizza2"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:padding="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:textSize="14sp"
            android:textColor="#888"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Spacer -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <!-- Add Button -->

    <Button
        android:id="@+id/btnAddCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Categorie"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF6B00"
        android:padding="20dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>